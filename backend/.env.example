PORT=3000
GEMINI_API_KEY=your_gemini_api_key_here
APP_ENV=development
AMPLITUDE_API_KEY=your_amplitude_api_key_here
USE_AMPLITUDE=false

# Shopify Catalog API (OAuth2 client_credentials)
SHOPIFY_CLIENT_ID=your_shopify_client_id
SHOPIFY_CLIENT_SECRET=your_shopify_client_secret

# Set to 'true' to force mock data (useful for demos)
SHOPIFY_USE_MOCK=false
# Set to 'true' to use mock results when Shopify API fails
SHOPIFY_FALLBACK_TO_MOCK=false

# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shop-the-frame
PGSSL=false
USE_POSTGRES=true
